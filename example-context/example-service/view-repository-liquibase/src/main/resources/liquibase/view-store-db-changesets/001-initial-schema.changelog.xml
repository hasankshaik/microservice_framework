<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="view-store-001" author="TechPod" logicalFilePath="001-initial-schema.changelog.xml">

        <createTable tableName="recipe_ingredients_list">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="recipe_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="ingredient" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="quantity" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="recipes">
            <column name="stream_id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="recipe_name" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="cakes">
            <column name="cake_id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="recipe_id" type="uuid">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="ingredients">
            <column name="ingredient" type="TEXT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quantity" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>
